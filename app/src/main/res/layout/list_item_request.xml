<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_request_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_boundary_sharp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_border_color_dark">

            <TextView
                android:id="@+id/list_item_request_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minLines="1"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_item_request_source_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Source Address"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Destination" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_border_color_dark">
        <TextView
            android:id="@+id/list_item_request_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/list_item_request_destination_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Destination Address"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/list_item_request_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_border_color_dark"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/list_item_request_see_details_button"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-23dp"
        android:background="@drawable/rounded_border_color_primary_more_round"
        android:text="See Details"
        android:textAllCaps="false"
        android:layout_marginBottom="3dp"/>

</LinearLayout>